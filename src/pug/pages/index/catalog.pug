- let arr = ["День рождения", "Выписка из роддома", "Свадьба", "День святого Валентина", "Гендерная вечеринка", "23 февраля", "8 марта", "День матери", "Юбилей", "Девичник", "1 сентября", "Выпускной"]
- let n = 0;
section.section.catalog
	.layer._bg.lazy(data-bg="img/catalog-bg.webp", data-bg-fallback="img/catalog-bg.png")
	.layer._ball1.lazy(data-bg="img/catalog-ball1.webp", data-bg-fallback="img/catalog-ball1.png")
	.layer._ball2.lazy(data-bg="img/catalog-ball2.webp", data-bg-fallback="img/catalog-ball2.png")
	.site-container
		.catalog__title
			h2
				span
					|	Добавим эмоций
				|	в ваше событие
		.catalog__container
			.catalog__col
				ul.catalog__list
					for item in arr
						- n++
						li.catalog__item(class=`${ n == 1 ? "_active" : "" }`)=item
			.catalog__col
				ul.catalog__products
					- for (let i=0; i<6; i++)
						li.catalog__product(data-id=`${i}`)
							a._wrap(href="")
								img(src=`img/product${i}.png`, alt="Продукт")
								.catalog__product-info
									span.catalog__product-legend
										|	"Твое желание"
									.catalog__product-wrap
										span.catalog__product-price
											|	2 150 ₽
										span.catalog__product-quant
											|	11 шариков
								.catalog__product-button.cart-button
									button.cart-button__text.button-reset.product-button(data-price=`2${i}50`, data-id=`${i}`, data-link=`test${i}`, data-name=`Твое желание-${i}`, data-img=`img/product${i}.png`, data-summ=`2${i}50`, data-quant="1")
										|	В корзину
									.quant(data-id=`${i}`, data-price=`2${i}50`)
										+icon("cart")
										span.quant__minus.quantChange__minus
											|	-
										input.quant__input(type="text", value="1", maxlength="3")
										span.quant__plus.quantChange__plus
											|	+
				a.catalog__show-more(href="")
					|	Показать еще
				p.catalog__text
					|	И&nbsp;это еще не&nbsp;все!
					br
					|	Кстати, мы&nbsp;продаем шарики и&nbsp;наборами, и&nbsp;поштучно
				a.catalog__link.btn(href="")
					span
						|	В каталог
